.weather-wrapper {
  position: relative;
  width: 750rpx;
  height: 760rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
  /* background: url('../../images/sunny-bg.png') no-repeat center ;
  background-size: 100%; *//* background-color: moccasin; */
}

.temp {
  text-align: center;
  font-size: 200rpx;
  /* margin-top: 174rpx; */
  opacity: 0.8;
  line-height: 280rpx;
  /* 一般行高设置为字体的1.4倍 */
}

.description {
  font-size: 40rpx;
  text-align: center;
  opacity: 0.65;
  line-height: 56rpx;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.timetips {
  text-align: center;
  margin: 40rpx 0;
}

.time-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.time-text {
  display: inline-block;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast-list {
  display: flex;
}

.forecast-item {
  width: 120rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather {
  width: 60rpx;
  height: 60rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.forecast-temp {
  font-size: 40rpx;
  line-height: 56rpx;
}

.day-weather {
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  bottom: 0;
  display: flex;
  align-items: center;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5);
}

.arrow {
  width: 13rpx;
  height: 24rpx;
  margin: 0 10rpx;
}

.day-temp {
  padding-right: 30rpx;
}

.day-time {
  flex-grow: 1;
}

.location-wrapper {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5);
  line-height: 42rpx;
  margin-bottom: 60rpx;
}

.location {
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon {
  width: 21rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.location-tips {
  text-align: center;
  margin-top: 10rpx;
  height: 42rpx;
}
