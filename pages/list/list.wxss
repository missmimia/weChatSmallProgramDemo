/* list.wxss */

.date-item {
  display: flex;
  height: 150rpx;
  align-items: center;
  margin: 0 40rpx;
  border-bottom: 1px solid #eee;
}

.date-item:last-child {
  border-bottom: none;
}

.day {
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}

.date {
  display: block;
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
}

.temp {
  flex-grow: 1;
  text-align: center;
}

.weather-icon {
  width: 90rpx;
  height: 90rpx;
}
